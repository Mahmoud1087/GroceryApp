<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="34dp"
        android:text="Grocery App"
        android:textColor="#733608"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="362dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Welcome to the Grocery App home page."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="172dp"
        android:text="To check your location on the map, click here:"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/mapsBtn"
        android:layout_width="112dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="203dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/maps_25" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="266dp"
        android:text="To add new items, click here:"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="129dp"
        android:layout_height="116dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/_501851_15" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="136dp"
        android:text="To buy items, click here:"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/buyBtn"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/bag" />

</RelativeLayout>





